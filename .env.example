# Boomshakalaka Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# API Keys
# =============================================================================

# Odds API - https://the-odds-api.com/
ODDS_API_KEY=

# YouTube Data API - https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=

# Anthropic API - https://console.anthropic.com/ (for theme generation)
ANTHROPIC_API_KEY=

# =============================================================================
# WireGuard VPN Configuration
# =============================================================================

# Server Configuration (on the machine running boomshakalaka)
WG_SERVER_PRIVATE_KEY=
WG_SERVER_PUBLIC_KEY=
WG_SERVER_ADDRESS=10.200.200.1/24
WG_SERVER_PORT=51820
WG_SERVER_PUBLIC_IP=

# Client Configuration (for remote devices)
WG_CLIENT_PRIVATE_KEY=
WG_CLIENT_PUBLIC_KEY=
WG_CLIENT_ADDRESS=10.200.200.2/24

# =============================================================================
# SSH Configuration
# =============================================================================

# Your public SSH key fingerprint (for reference)
SSH_KEY_FINGERPRINT=

# Local network CIDR that allows password auth (optional)
SSH_LOCAL_NETWORK=192.168.0.0/24
