[Unit]
Description=Boomshakalaka Reboot Server - Dashboard restart button on port 3004
After=network.target

[Service]
Type=simple
User=pds
WorkingDirectory=/home/pds/boomshakalaka
Environment="HOME=/home/pds"
ExecStart=/home/pds/boomshakalaka/scripts/start_reboot_server.sh
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
